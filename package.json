{
  "name": "clinq-bridge-moco",
  "version": "1.0.0",
  "description": "CLINQ bridge for moco crm",
  "main": "dist/index.js",
  "repository": "git@github.com:sipgate/clinq-bridge-moco.git",
  "contributors": [
    {
      "name": "Pascal Jordin",
      "email": "pascal@jordin.eu"
    }
  ],
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "tsc",
    "start": "ts-node src/index",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "tslint --project tsconfig.json"
  },
  "dependencies": {
    "@clinq/bridge": "^7.0.2",
    "@types/node": "^10.12.20",
    "axios": "^0.18.0",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.{json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
